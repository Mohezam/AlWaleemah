@model AlWaleemah.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <form asp-action="Edit" method="post">

        <div>
            <label>FirstName:</label>
            <input asp-for="FirstName" name="FirstName" class="form-control" />
        </div>
        <div>
            <label>LastName:</label>
            <input asp-for="LastName" name="LastName" class="form-control" />
        </div>

        <div>
            <label>Email:</label>
            <input asp-for="Email" name="Email" class="form-control" />
        </div>

        <div>
            <label>Username:</label>
            <input asp-for="Username" name="Username" class="form-control" />
        </div>

        <div>
            <label>Password:</label>
            <input asp-for="Password" name="Password" class="form-control" />
        </div>

        <div>
            <label>Address:</label>
            <input asp-for="Address" name="Address" class="form-control" />
        </div>
        <div>
            <label>Salary:</label>
            <input asp-for="Salary" type="number" name="Salary" class="form-control" />
        </div>
        <div>
            <label>Lock:</label>
            <input asp-for="Islock" type="checkbox" name="Islock" class="form-check" />
        </div>

        <hr>
        <button type="submit" class="btn btn-primary">Save</button>


    </form>

<div>
