@model AlWaleemah.Models.Utility
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>


<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 text-primary mb-1">تفاصيل الأداة</h1>
                    <p class="text-muted mb-0">عرض المعلومات الكاملة للأداة</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>العودة للقائمة
                </a>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-info text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-eye me-2"></i>@Model.Name
                    </h5>
                </div>

                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label class="form-label fw-bold text-muted">اسم الأداة</label>
                                <p class="fs-5">@Model.Name</p>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold text-muted">نوع الأداة</label>
                                <div>
                                    <span class="badge bg-secondary fs-6">@Model.Type</span>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold text-muted">الفئة</label>
                                <p>@(string.IsNullOrEmpty(Model.Category) ? "لا يوجد" : Model.Category)</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-4">
                                <label class="form-label fw-bold text-muted">القيمة</label>
                                @if (Model.Type == UtilityType.Color)
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="color-preview me-3" style="width: 40px; height: 40px; background-color: @Model.Value; border: 2px solid #dee2e6; border-radius: 5px;"></div>
                                        <code class="fs-6">@Model.Value</code>
                                    </div>
                                }
                                else
                                {
                                    <code class="fs-6">@Model.Value</code>
                                }
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold text-muted">الحالة</label>
                                <div>
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success fs-6">مفعل</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger fs-6">غير مفعل</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-4">
                                    <label class="form-label fw-bold text-muted">الوصف</label>
                                    <p class="bg-light p-3 rounded">@Model.Description</p>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">معلومات النظام</h6>
                                    <p class="mb-1"><small><strong>تاريخ الإنشاء:</strong> @Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")</small></p>
                                    @if (Model.UpdatedAt.HasValue)
                                    {
                                        <p class="mb-0"><small><strong>آخر تحديث:</strong> @Model.UpdatedAt.Value.ToString("yyyy/MM/dd HH:mm")</small></p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-4 pt-3 border-top">
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="bi bi-pencil me-2"></i>تعديل
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary">العودة للقائمة</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .color-preview {
        display: inline-block;
        border: 1px solid #dee2e6;
    }
</style>