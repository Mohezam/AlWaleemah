@model IEnumerable<Order>

@{
    ViewData["Title"] = "CustomerOrders";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<h1>CustomerOrders</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center mb-4">@ViewData["Title"]</h2>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <h4>لا توجد طلبات</h4>
                    <p>لم يتم العثور على أي طلبات لهذا العميل.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>رقم الطلب</th>
                                <th>تاريخ الطلب</th>
                                <th>الحالة</th>
                                <th>المجموع</th>
                                <th>عدد العناصر</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>#@order.Id</td>
                            @*         <td>@order.OrderDate.ToString("yyyy/MM/dd")</td>
                                    <td>
                                        <span class="badge
                                                    @(order.Status == "مكتمل" ? "bg-success" :
                                                                                            order.Status == "قيد المعالجة" ? "bg-warning" :
                                                                                            order.Status == "ملغي" ? "bg-danger" : "bg-secondary")">
                                    @order.Status
                                </span>
                            </td>
                            <td>@order.TotalAmount.ToString("C")</td> *@
                            <td>@order.Items.Count</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@order.Id"
                                   class="btn btn-primary btn-sm">
                                    <i class="bi bi-eye"></i> تفاصيل
                                </a>
                            </td>
                        </tr>
                                                }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>إجمالي الطلبات: </strong> @Model.Count()
                        </div>
                        <div class="col-md-6 text-end">
                            <strong>المجموع الكلي: </strong>
                            @Model.Sum(o => o.Total).ToString("C")
                        </div>
                    </div>
                </div>
            }

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-right"></i> العودة للرئيسية
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table th {
            text-align: right;
            font-weight: 600;
        }

        .table td {
            vertical-align: middle;
        }

        .badge {
            font-size: 0.85em;
        }
    </style>
}