@model IEnumerable<Order>

@{
    ViewData["Title"] = "CustomerOrders";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">@ViewData["Title"]</h2>
    <hr />


    @if (!Model.Any())
    {
        <div class="alert alert-warning mt-4">
            <i class="bi bi-exclamation-triangle"></i>
            لا توجد طلبات لعرضها
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light d-flex justify-content-between">
                            <h5 class="mb-0">
                                <i class="bi bi-receipt"></i>
                                طلب رقم #@order.Id
                            </h5>
                            <span class="badge bg-info">@order.PaidAt.ToString("yyyy/MM/dd")</span>
                        </div>
                        
                        <div class="card-body">
                            <h6 class="text-muted">المنتجات:</h6>
                            <div class="table-responsive">
                                <table class="table table-sm table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>المنتج</th>
                                            <th>الكمية</th>
                                            <th>السعر</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in order.Items)
                                        {
                                            <tr>
                                                <td>@item.Product?.ProductName</td>
                                                <td>@item.Quantity</td>
                                                <td>@item.UnitPrice.ToString("C")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="d-flex justify-content-between mt-3 pt-3 border-top">
                                <strong>المجموع:</strong>
                                <strong class="text-success">
                                    @order.Items.Sum(i => i.Quantity * i.UnitPrice).ToString("C")
                                </strong>
                            </div>
                        </div>

                        <!-- أزرار التحكم - تم إضافتها هنا -->
                        <div class="card-footer bg-white d-flex justify-content-between align-items-center">
                            <div>
                                <button class="btn btn-outline-danger btn-sm"
                                        onclick="deleteOrder(@order.Id)"
                                        title="حذف الطلب">
                                    <i class="bi bi-trash"></i> حذف
                                </button>

                                <button class="btn btn-outline-secondary btn-sm ms-2"
                                        onclick="exportToPdf(@order.Id)"
                                        title="تصدير إلى PDF">
                                    <i class="bi bi-file-pdf"></i> PDF
                                </button>
                            </div>

                            <div class="d-flex align-items-center">
                                <span class="text-muted me-2">الحالة:</span>
                                <select class="form-select form-select-sm w-auto"
                                        onchange="updateOrderStatus(@order.Id, this.value)"
                                        style="min-width: 120px;">
                                    <option value="Pending" selected="@(order.Status==OrderStatus.Pending )">معلق</option>
                                    @* <option value="Processing" selected="@(order.Status == "Processing")">قيد التنفيذ</option> *@
                                    <option value="Completed" selected="@(order.Status == OrderStatus.Paid)">مكتمل</option>
                                    <option value="Cancelled" selected="@(order.Status == OrderStatus.Cancelled)">ملغي</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        .card {
            border: 1px solid #e3e3e3;
            border-radius: 10px;
        }

        .card-header {
            border-bottom: 2px solid #dee2e6;
        }

        .table th {
            border-top: none;
            font-weight: 600;
        }

        .card-footer {
            border-top: 1px solid #e3e3e3;
            background-color: #f8f9fa !important;
        }
    </style>
}

@section Scripts {
    <script>
        // تحديث حالة الطلب
        function updateOrderStatus(orderId, status) {
            if (!confirm('هل أنت متأكد من تغيير حالة الطلب؟')) return;

            fetch(`/Orders/UpdateStatus?orderId=${orderId}&status=${status}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            })
            .then(response => {
                if (response.ok) {
                    showAlert('تم تحديث حالة الطلب بنجاح', 'success');
                } else {
                    showAlert('حدث خطأ أثناء تحديث الحالة', 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showAlert('حدث خطأ في الشبكة', 'error');
            });
        }

        // تصدير إلى PDF
        function exportToPdf(orderId) {
            window.open(`/Orders/ExportPdf?orderId=${orderId}`, '_blank');
        }

        // حذف الطلب
        function deleteOrder(orderId) {
            if (!confirm('هل أنت متأكد من حذف هذا الطلب؟ لا يمكن التراجع عن هذه العملية.')) return;

            fetch(`/Orders/Delete?orderId=${orderId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            })
            .then(response => {
                if (response.ok) {
                    showAlert('تم حذف الطلب بنجاح', 'success');
                    // إزالة البطاقة من الواجهة
                    document.querySelector(`[data-order-id="${orderId}"]`).remove();
                } else {
                    showAlert('حدث خطأ أثناء حذف الطلب', 'error');
                }
            });
        }

        // عرض رسائل تنبيه
        function showAlert(message, type) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;

            document.querySelector('.container').prepend(alertDiv);

            // إزالة التنبيه تلقائياً بعد 5 ثواني
            setTimeout(() => {
                alertDiv.remove();
            }, 5000);
        }
    </script>
}


