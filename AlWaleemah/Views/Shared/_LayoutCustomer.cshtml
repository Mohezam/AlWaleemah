

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="@ViewBag.Description" />
    <meta name="author" content="" />
    <title>@ViewBag.Title - متجرنا</title>

    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/ClientTemplate/assets/favicon.ico" />

    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/ClientTemplate/css/styles.css" rel="stylesheet" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand fw-bold" asp-controller="HomePage" asp-action="Index">
                <i class="bi bi-shop me-2"></i>متجرنا
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="تبديل التنقل">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="HomePage" asp-action="Index">
                            <i class="bi bi-house me-1"></i>الرئيسية
                        </a>
                    </li>
                    @* <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">
                            <i class="bi bi-info-circle me-1"></i>من نحن
                        </a>
                    </li> *@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-grid me-1"></i>المتجر
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" asp-controller="HomePage" asp-action="Index">جميع المنتجات</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            @* <li><a class="dropdown-item" asp-controller="Products" asp-action="Popular">المنتجات الشائعة</a></li>
                            <li><a class="dropdown-item" asp-controller="Products" asp-action="New">الواصل حديثاً</a></li> *@
                        </ul>
                    </li>
                </ul>

                <div class="d-flex align-items-center gap-3">
                    <!-- Cart Button -->
                    <a asp-controller="HomePage" asp-action="Cart" asp-route-custId="@Context.Session.GetInt32(" IdCustomer")" class="btn btn-outline-dark position-relative">
                        <i class="bi bi-cart-fill me-1"></i>
                        السلة
                        @{
                            var cartCount = Context.Session.GetInt32("CartCount") ?? 0;
                            var customerId = Context.Session.GetInt32("IdCustomer") ?? 0;
                        }

                        @if (cartCount > 0)
                        {
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                @cartCount
                            </span>
                        }
                    </a>
                    <!-- User Menu -->
                    @if (Context.Session.GetString("UsernameCustomer") != null)
                    {
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center text-decoration-none"
                               href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img class="rounded-circle me-2" src="~/Dashbord/img/undraw_profile.svg"
                                     alt="صورة المستخدم" width="32" height="32">
                                <span class="text-dark">مرحباً @Context.Session.GetString("UsernameCustomer")</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                        <i class="bi bi-person me-2"></i>الملف الشخصي
                                    </a>
                                </li>
                                @* <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="Settings">
                                        <i class="bi bi-gear me-2"></i>الإعدادات
                                    </a>
                                </li> *@
                                <li>
                                    <a class="dropdown-item" asp-controller="Orders" asp-action="CustomerOrders" asp-route-custId="@Context.Session.GetInt32(" IdCustomer")">
                                        <i class="bi bi-list-check me-2"></i>طلباتي
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger" asp-controller="CustomerClient" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right me-2"></i>تسجيل الخروج
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex gap-2">
                            <a class="btn btn-outline-primary" asp-controller="CustomerClient" asp-action="Login">تسجيل الدخول</a>
                            <a class="btn btn-primary" asp-controller="CustomerClient" asp-action="Register">إنشاء حساب</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer-->
    <footer class="py-5 bg-dark text-white">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5 class="fw-bold">متجرنا</h5>
                    <p class="text-muted">متجرك الإلكتروني الموثوق لجميع احتياجاتك.</p>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6>روابط سريعة</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted text-decoration-none">الرئيسية</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">من نحن</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">اتصل بنا</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h6>المتجر</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted text-decoration-none">جميع المنتجات</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">العروض</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">واصل حديثاً</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h6>وسائل التواصل</h6>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-white"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-white"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <p class="text-center text-muted mb-0">&copy; 2024 متجرنا. جميع الحقوق محفوظة.</p>
        </div>
    </footer>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/ClientTemplate/js/scripts.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



